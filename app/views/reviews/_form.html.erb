<div class="col-md-6 col-md-offset-3">
  <%= form_for [@restaurant, @review] do |f| %>
      <div class="form-group">
        <%= f.label :rating %>
        <%= f.text_area :rating, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :comment %>
        <%= f.text_area :comment, class: "form-control" %>
      </div>

      <div class="action">
        <%= f.submit class: "btn btn-primary" %>
      </div>
  <% end %>
</div>